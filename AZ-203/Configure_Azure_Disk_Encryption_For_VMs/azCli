-- DISCLAIMER --
Login and choose subscription first

az group create -n az-203-vm-encryption -l westeurope

az vm create --resource-group az-203-vm-encryption --name az203vm --image Canonical:UbuntuServer:18.04-LTS:latest --generate-ssh-keys

az keyvault create --resource-group az-203-vm-encryption --name az203vm-encryption-kv --enabled-for-disk-encryption

az vm encryption enable --disk-encryption-keyvault az203vm-encryption-kv --name az203vm --resource-group az-203-vm-encryption

az vm encryption show --name az203vm --resource-group az-203-vm-encryption